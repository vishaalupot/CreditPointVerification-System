    function initializeMap() {
    @*var lat = @Model.Latitude;
        var longi = @Model.Longitude;*@
     var lat = @(Model.Latitude != null ? Model.Latitude.ToString() : "0");
     var longi = @(Model.Longitude != null ? Model.Longitude.ToString() : "0");

    var latlng = new google.maps.LatLng(lat, longi);
    var myOptions = {
        zoom: 14,
        zoomControl: false,
        scaleControl: false,
        scrollwheel: false,
        disableDoubleClickZoom: true,
        center: latlng,
        mapTypeId: google.maps.MapTypeId.ROADMAP
    };

    var map = new google.maps.Map(document.getElementById("map"), myOptions);
    var marker = new google.maps.Marker({
        position: new google.maps.LatLng(lat, longi),
        map: map,
    });
        }

    function saveAsPDF() {
    var element = document.querySelector('.print');
    var filename = '@Model.Application_no' + '-' + '@Model.Company_Name' + '.pdf';
    var options = { filename: filename };

    html2pdf(element, options);
        }

        //function initializeMapAndSavePDF() {
        //    google.maps.event.addDomListenerOnce(window, 'load', function () {
        //        initializeMap();
        //        google.maps.event.addListenerOnce(map, 'tilesloaded', function () {
        //            saveAsPDF();
        //        });
        //    });
        //}

        function initializeMapAndSavePDF() {
            google.maps.event.addDomListenerOnce(window, 'load', function () {
                initializeMap();
                google.maps.event.addListenerOnce(map, 'tilesloaded', function () {
                    // Wait for a short time to ensure the map is fully loaded
                    setTimeout(function () {
                        saveAsPDF();
                    }, 1000); // You can adjust the delay time if needed
                });
            });
        }

