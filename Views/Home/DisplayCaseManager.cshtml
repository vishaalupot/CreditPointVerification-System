            background: linear-gradient(to right, #25947a, #236a8b);
            color: ghostwhite;
            overflow: hidden;
            margin-right: 20px;
            margin-bottom: 3px;
        }

            .cssbuttons-io svg {
                width: 1.5em;
                height: 1.5em;
                margin-right: 0.5em;
            }

            .cssbuttons-io span {
                position: relative;
                z-index: 10;
                transition: color 0.4s;
                display: inline-flex;
                align-items: center;
                padding: 0.1em 0em 0em 0em;
            }

            .cssbuttons-io::before,
            .cssbuttons-io::after {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                z-index: 0;
            }

            .cssbuttons-io::before {
                content: "";
                background: #236154;
                width: 120%;
                left: -10%;
                transform: skew(30deg);
                transition: transform 0.4s cubic-bezier(0.3, 1, 0.8, 1);
            }

            .cssbuttons-io:hover::before {
                transform: translate3d(100%, 0, 0);
            }

            .cssbuttons-io:active {
                transform: scale(0.95);
            }

