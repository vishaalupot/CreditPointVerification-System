            border-bottom-right-radius: 0px;
            border-top-right-radius: 0px;
            font-family: 'Jaldi', sans-serif;
            font-size: 15px;
            padding-left: 10px;
            border: 1px groove #569F9F;
        }

            .search-input:focus {
                border-color: #68c5b5; /* Set the border color you want when the input is focused */
                outline: none; /* Remove the default focus outline (optional) */
            }

        #btnsubmit {
            background-color: #236154;
            border-radius: 50px;
            width: 45px;
            height: 30px;
            border: none;
            border-bottom-left-radius: 0px;
            border-top-left-radius: 0px;
            margin-bottom: 3px;
            background-image: url('../../Content/Images/search1.png'); /* Replace 'path/to/your/image.png' with the actual path to your PNG image */
            background-size: cover;
            background-size: 55%;
            background-repeat: no-repeat;
            background-position: center;
        }

        .placeholder {
            height: 25px;
            opacity: .03;
            border-radius: 12px;
            margin: 5px;
        }

        .cont {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .editCase {
            width: 15px;
            height: 15px;
            margin: 0px 2px;
            cursor: pointer;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function ()
        {
            searchCases();

            /*Not used anymore*/
             $(".deleteBtn").click(function () {
                let data = $(this).data("id");

                 @*let url = '@Url.Action("DeleteCase", "Home", new { id = "_id_" })';*@


                 let url = '@Url.Action("DeleteCase")';
                 let ajaxdata = { id : data };
                 //url = url.replace("_id_", data);
                /* alert(ajaxdata);*/
                $.ajax({
                    url: url,
                    data: ajaxdata,
                    type: "Post",
                    success: function (result) {
                        location.reload();
                       /* alert("Success");*/
                    },
                    error: function (error) {
                        location.reload();
                       /* alert("error")*/
                    }
                })

            })

            $("#btnsubmit").on("click", function (e)
            {
                searchCases();
            });

            $("#createCaseButton").click(function () {
                @*var a = '@Html.Action("CreateCaseManagerView")';*@
            window.location.href = '@Url.Action("CreateCaseManagerView", "Home")';
        });

            $("#searchInput").keypress(function (e) {
                if (e.which === 13) {
                    e.preventDefault();
                    searchCases();
                }
            });

        })




        function searchCases() {
            console.log("Button clicked");
            var query = $("#searchInput").val();
            var url = '@Url.Action("_SearchAllCases", "Home")';
            url = url.replace("_query_", query);
            console.log(url);
           /* alert(query)*/
            $.ajax({
                url: url,
                data: { query: query },
                type: "Post",
                success: function (result) {

                    $("#CaseList").html(result);
                },
                error: function (e) {
                    alert("Error fetching search results");
                }
            });
        }

    </script>

    <style>
        .cssbuttons-io {
            width: 80px;
            height: 30px;
            position: relative;
            font-family: 'Jaldi', sans-serif;
            /* font-weight: 500;*/
            font-size: 17px;
            /* letter-spacing: 0.05em;*/
            border-radius: 4px;
            cursor: pointer;
